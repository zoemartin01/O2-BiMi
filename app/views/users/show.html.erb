<div class="row">
  <h1 class="display-2 text-center"><%= @user.name %></h1>
</div>


<div class="row justify-content-center">
  <div class="col-auto">
    <table class="table table-borderless">
      <tbody>
      <tr>
        <th>E-Mail</th>
        <th><%= @user.email %></th>
      </tr>
      <tr>
        <th>Room</th>
        <th><%= @user.room %></th>
      </tr>
      <tr>
        <th>Balance</th>
        <th><%= @user.balance %>€</th>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="row">
  <h1 class="display-3 text-center">Transactions</h1>
</div>
<div class="row">
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Drink</th>
      <th>Stock Change</th>
      <th>Balance Change</th>
      <th>Comment</th>
      <th class="col-md-1"></th>
    </tr>
    </thead>
    <tbody>
    <% @user.transactions.each do |transaction| %>
      <tr>
        <td>
          <% if transaction.drink != nil %>
            <%= transaction.drink.name %>
          <% end %>
        </td>
        <td><%= transaction.stock_change %></td>
        <td><%= number_with_precision(transaction.balance_change, :precision => 2) %>€</td>
        <td><%= transaction.comment %></td>
        <td>
          <%= link_to "More...", transaction_path(transaction), class: "btn btn-outline-dark", role: "button" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>