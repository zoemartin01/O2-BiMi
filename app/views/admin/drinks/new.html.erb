<div class="row">
  <h1 class="display-2 text-center">New Drink</h1>
</div>

<br>

<div class="row justify-content-center">
  <div class="col-sm-8">
    <%= form_for @drink, url: { controller: "admin/drinks", action: "create" }, html: { class: "nifty_form" } do |f| %>
      <div class="form-group row pb-2 pt-2">
        <%= f.label :name, "Name", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, { class: "form-control", placeholder: "Name" } %>
        </div>
      </div>
      <div class="form-group row pb-2 pt-2">
        <%= f.label :stock, "Stock", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.number_field :stock, { class: "form-control", placeholder: "Stock" } %>
        </div>
      </div>
      <div class="form-group row pb-2 pt-2">
        <%= f.label :price, "Price", class: "col-sm-2 col-form-label" %>
        <div class="col">
          <div class="input-group">
            <%= f.number_field :price, { class: "form-control", step:"0.01", placeholder: "Price", 'aria-describedby': "inputGroupPrepend" } %>
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupPrepend">â‚¬</span>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col text-center">
          <div class="form-check form-check-inline">
            <%= f.check_box :enabled, { class: "form-check-input" }, "true", "false" %>
            <%= f.label :enabled, "Drink Enabled", class: "form-check-label" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col text-center">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
